@model VehicleMarket2.ViewModels.HomeViewModel
@using VehicleMarket2.Infrastucture
    @{
        ViewBag.Title = "Vehicle Market";
    }

<body>
    <nav class="kategorieHorizontal">
        <ul>
            @foreach (var category in Model.Categories)
            {
                <li>
                    <a href="@Url.Action("List", "Cars", new {categoryName = category.CategoryName.ToLower() })"
                       style="background-image: url(@Url.CategoriesIconsPath(category.Photo));">
                        @category.CategoryName
                    </a>
                </li>
            }           
        </ul>
        <a href="link">
            <img id="baner" src="../Content/Images/baner.png" />
        </a>
    </nav>

    <section>
        <ul class="KursyTrzyKolumny duzaListaKursy">
            @foreach (var news in Model.News)
            {
                <li>
                    <article>
                        <a class="dodajDoKoszykaLink" href="@Url.Action("addToCart", "Cart", new {id=news.CarID})">
                            <img src="../Content/Images/koszyk.png"/>
                        </a>
                        <a class="kursSzczegolyLink" href="@Url.Action("Details", "Cars", new {id=news.CarID})">
                            <div class="newFlag"></div>
                            <img class="kurs" src="@Url.VehiclesIconsPath(news.Photo)"/>
                            <h1>
                                @news.Brand @news.Model
                            </h1>
                        </a>
                    </article>
                </li>
            }
        </ul>
    </section>
    <section>
        <ul class="KursyTrzyKolumny duzaListaKursy">
            @foreach (var supercar in Model.Supercars)
            {
                <li>
                    <article>
                        <a class="dodajDoKoszykaLink" href="link">
                            <img src="../Content/Images/koszyk.png"/>
                        </a>
                        <a class="kursSzczegolyLink" href="link">
                            <div class="bestsellerFlag"></div>
                            <img class="kurs" src="@Url.VehiclesIconsPath(supercar.Photo)"/>
                            <h1>
                                @supercar.Brand @supercar.Model
                            </h1>
                        </a>
                    </article>
                </li>
            }
        </ul>
    </section>
    </body>
    </html>
